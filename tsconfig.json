{
  "compilerOptions": {
    "target": "ESNext",
    "module": "nodenext",
    "ignoreDeprecations": "6.0",
    "noImplicitAny": true,
    "allowJs": true,
    "allowArbitraryExtensions": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "incremental": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@configs/*": ["configs/*"],
      "@constants/*": ["constants/*"],
      "@library/*": ["library/*"],
      "@controllers/*": ["controllers/*"],
      "@middlewares/*": ["middlewares/*"],
      "@models/*": ["models/*"],
      "@routers/*": ["routers/*"],
      "@schemas/*": ["schemas/*"],
      "@services/*": ["services/*"],
      "@uploads/*": ["uploads/*"],
      "@timers/*": ["timers/*"],
      "types/*": ["types/*"],
      "@utils/*": ["utils/*"]
    }
  },
  "include": [
    "./tests/**/*.ts",
    "./src/**/*.ts",
    "./src/**/*.d.ts",
    "./config/*.json"
  ],
  "exclude": [
    "node_modules"
  ],
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ]
  }
}